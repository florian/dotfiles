alias h=heroku
alias i="brew install"
alias k="killall -9"
alias m=make
alias n=npm
alias r=rake
alias s=sudo
alias t=top
alias v=vim
alias w=watch
#     x: extract
#     z: directory jumper

alias ci="component install"
alias ni="npm install"
alias gi="gem install"

alias install="brew install"
alias update="brew update"
alias upgrade="brew upgrade"

alias bu=bundle
alias cp="cp -r"
alias ea="subl . &"
alias gr="git repl"
alias mk="mkdir -p"
alias sn="sudo npm"
alias rs="rspec spec"

# oh-my-zsh stuff
alias mkcd=take
alias stats=zsh_stats

alias reload!=". ~/.zshrc"
alias r!=reload!

suffixes=(txt html erb haml slim jade css styl less sass scss js coffee rb php sh tex yml ini json xml)

for suffix in $suffixes; do
	alias -s $suffix=$EDITOR
done
